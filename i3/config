set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $HOME/bin/i3exit.sh lock, mode "default"
    bindsym e exec --no-startup-id $HOME/bin/i3exit.sh logout, mode "default"
    bindsym s exec --no-startup-id $HOME/bin/i3exit.sh suspend, mode "default"
    bindsym h exec --no-startup-id $HOME/bin/i3exit.sh hibernate, mode "default"
    bindsym r exec --no-startup-id $HOME/bin/i3exit.sh reboot, mode "default"
    bindsym Shift+s exec --no-startup-id i3exit shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Scroll_Lock mode "$mode_system"

mode "run" {
	bindsym c exec --no-startup-id google-chrome-stable; mode "default"
	bindsym Shift+c exec --no-startup-id google-chrome-stable -incognito; mode "default"
	bindsym v exec --no-startup-id code; mode "default"
	bindsym g exec --no-startup-id gvim; mode "default"
	bindsym Shift+g exec --no-startup-id terminator -T "vim" -e vim; mode "default"
	bindsym b exec --no-startup-id terminator -T "bpython" -e bpython; mode "default"
	bindsym r exec --no-startup-id terminator -T "ranger" -e ranger; mode "default"
	
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $alt+p mode "run"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

